        <a href="../" class="navbar-brand">Desafio Rails</a>
        <div class="collapse navbar-collapse" id="navbarResponsive">
          <ul class="navbar-nav">
            <li><%= link_to "Index", root_path, class: 'nav-item'%></li>
            <li><%= link_to "Landing", pages_landing_path, class: 'nav-item'%></li>
          </ul>
        </div>
      </div>
    </div>
